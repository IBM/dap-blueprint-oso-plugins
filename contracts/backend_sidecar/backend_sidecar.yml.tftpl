version: '2.4'

networks:
  cs-network:
    external: false
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: 192.168.10.0/24 

services:
  backend_sidecar:
    image: ${tpl.image}
    networks:
      - cs-network
    ports:
      - "$${PORT}:$${PORT}" 
      - "$${SSH_PORT}:22"
    environment:
      BACKEND_ENDPOINT: "${tpl.BACKEND_ENDPOINT}"
      SSH_PUBKEY: $${SSH_PUBKEY}    
      PORT: $${PORT}
      COMPONENT_CA_CERT: $${COMPONENT_CA_CERT}
      BACKEND_KEY: $${BACKEND_KEY}
      BACKEND_CERT: $${BACKEND_CERT}
      SYSLOG_HOSTNAME: $${SYSLOG_HOSTNAME}
      SYSLOG_PORT: $${SYSLOG_PORT}
      SYSLOG_SERVER_CERT: $${SYSLOG_SERVER_CERT}
      SYSLOG_CLIENT_CERT: $${SYSLOG_CLIENT_CERT}
      SYSLOG_CLIENT_KEY: $${SYSLOG_CLIENT_KEY}